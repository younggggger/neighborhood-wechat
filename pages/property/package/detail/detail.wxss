.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.page-header {
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.page-subtitle {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

.package-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.courier-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.package-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background-color: #e6f7ff;
  color: #1890ff;
}

.expired {
  background-color: #f5f5f5;
  color: #999;
}

.picked {
  background-color: #f6ffed;
  color: #52c41a;
}

.card-content {
  padding: 10rpx 0;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  line-height: 1.5;
  align-items: center;
}

.info-label {
  color: #666;
  width: 180rpx;
}

.info-value {
  color: #333;
  flex: 1;
}

.highlight {
  color: #1890ff;
  font-weight: bold;
}

.warning {
  color: #fa8c16;
}

.copy-btn {
  font-size: 24rpx;
  color: #1890ff;
  background-color: #e6f7ff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.card-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  margin-left: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
  color: #666;
}

.primary {
  background-color: #1890ff;
  color: #fff;
}

.tracking-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tracking-timeline {
  position: relative;
  padding-left: 30rpx;
}

.tracking-timeline::before {
  content: '';
  position: absolute;
  left: 6rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background-color: #e8e8e8;
}

.timeline-item {
  position: relative;
  padding-bottom: 30rpx;
}

.timeline-dot {
  position: absolute;
  left: -30rpx;
  top: 6rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #bfbfbf;
  z-index: 1;
}

.timeline-item.current .timeline-dot {
  background-color: #1890ff;
  width: 16rpx;
  height: 16rpx;
  left: -32rpx;
  top: 4rpx;
}

.timeline-content {
  font-size: 26rpx;
}

.timeline-time {
  color: #999;
  margin-bottom: 6rpx;
}

.timeline-status {
  color: #333;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.timeline-location {
  color: #666;
}

.similar-packages {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.similar-list {
  display: flex;
  flex-wrap: nowrap;
  overflow-x: auto;
  margin: 0 -10rpx;
  padding-bottom: 10rpx;
}

.similar-item {
  flex: 0 0 auto;
  width: 300rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  margin: 0 10rpx;
}

.similar-courier {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.similar-info {
  font-size: 24rpx;
  color: #666;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.similar-status {
  font-size: 22rpx;
  padding: 4rpx 10rpx;
  border-radius: 20rpx;
  background-color: #e6f7ff;
  color: #1890ff;
}

.reminder-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.reminder-modal.show {
  visibility: visible;
  opacity: 1;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.reminder-modal.show .modal-content {
  transform: translateY(0);
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.reminder-options {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.reminder-option {
  width: calc(50% - 20rpx);
  margin: 10rpx;
  padding: 20rpx 0;
  text-align: center;
  font-size: 28rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  color: #333;
}

.reminder-option.selected {
  background-color: #e6f7ff;
  color: #1890ff;
  font-weight: bold;
}

.custom-time {
  margin-top: 20rpx;
  padding: 20rpx 0;
  text-align: center;
}

.picker-view {
  font-size: 32rpx;
  color: #1890ff;
  font-weight: bold;
}

.modal-footer {
  display: flex;
  margin-top: 40rpx;
}

.modal-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 30rpx;
  border-radius: 8rpx;
}

.cancel {
  background-color: #f5f5f5;
  color: #666;
  margin-right: 20rpx;
}

.confirm {
  background-color: #1890ff;
  color: #fff;
}