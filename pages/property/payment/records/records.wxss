/* pages/property/payment/records/records.wxss */

.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.page-header {
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.page-subtitle {
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 筛选区域样式 */
.filter-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.filter-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.filter-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
}

.filter-picker {
  flex: 1;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
}

.date-range {
  flex: 1;
  display: flex;
  align-items: center;
}

.date-picker {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
}

.date-separator {
  margin: 0 20rpx;
  color: #999;
  font-size: 24rpx;
}

.filter-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.btn-search, .btn-reset {
  width: 48%;
  font-size: 28rpx;
  padding: 16rpx 0;
  border-radius: 8rpx;
}

.btn-search {
  background-color: #07c160;
  color: #fff;
}

.btn-reset {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
}

/* 记录列表样式 */
.records-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.records-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.records-count {
  font-size: 28rpx;
  color: #666;
}

.export-btn {
  font-size: 28rpx;
  color: #1989fa;
  display: flex;
  align-items: center;
}

.export-btn::after {
  content: '';
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  margin-left: 8rpx;
  background-size: contain;
}

.records-list {
  margin-bottom: 20rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.record-info {
  flex: 1;
}

.record-type {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.record-period {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.record-date {
  font-size: 24rpx;
  color: #999;
}

.record-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.record-status {
  font-size: 26rpx;
  color: #07c160;
  background-color: #e6f7ee;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}

/* 导出弹窗样式 */
.export-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx 30rpx;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

.export-options {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.export-option {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.option-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pdf-icon {
  background-color: #f56c6c;
}

.excel-icon {
  background-color: #67c23a;
}

.option-name {
  font-size: 28rpx;
  color: #333;
}

.modal-footer {
  margin-top: 20rpx;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
  font-size: 30rpx;
  border-radius: 8rpx;
}