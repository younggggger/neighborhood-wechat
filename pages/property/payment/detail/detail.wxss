/* pages/property/payment/detail/detail.wxss */

.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.page-header {
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.bill-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.bill-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.bill-type {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.bill-status {
  font-size: 28rpx;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
}

.status-paid {
  background-color: #e6f7ee;
  color: #07c160;
}

.status-unpaid {
  background-color: #fff2e8;
  color: #fa8c16;
}

.bill-amount-section {
  text-align: center;
  margin: 40rpx 0;
}

.amount-label {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.amount-value {
  font-size: 60rpx;
  font-weight: bold;
  color: #333;
}

.bill-info-list {
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-label {
  color: #666;
  font-size: 28rpx;
}

.info-value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.bill-details {
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-top: 30rpx;
}

.details-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.details-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.details-name {
  font-size: 28rpx;
  color: #666;
}

.details-value {
  font-size: 28rpx;
  color: #333;
}

.details-total {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  padding-top: 15rpx;
  border-top: 1rpx dashed #e0e0e0;
}

.details-total .details-name,
.details-total .details-value {
  font-weight: bold;
  color: #333;
}

.action-buttons {
  margin: 40rpx 0;
}

.btn-primary {
  background-color: #07c160;
  color: #fff;
  border: none;
  margin-bottom: 20rpx;
}

.btn-secondary {
  background-color: #1989fa;
  color: #fff;
  border: none;
  margin-bottom: 20rpx;
}

.btn-outline {
  background-color: #fff;
  color: #666;
  border: 1rpx solid #ddd;
}

.payment-notes {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.notes-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.notes-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.notes-content view {
  margin-bottom: 10rpx;
}