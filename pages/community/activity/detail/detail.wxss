/* pages/community/activity/detail/detail.wxss */

.container {
  padding-bottom: 120rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
}

.loading {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3B82F6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 活动封面 */
.activity-cover {
  width: 100%;
  height: 400rpx;
  border-radius: 0 0 20rpx 20rpx;
}

/* 活动标题和状态 */
.activity-header {
  padding: 30rpx 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.activity-title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
}

.activity-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-left: 20rpx;
}

.status-enrolling {
  background-color: #E6F7FF;
  color: #1890FF;
}

.status-ended {
  background-color: #F5F5F5;
  color: #999999;
}

/* 活动信息 */
.info-section {
  padding: 0 30rpx 20rpx;
  border-bottom: 1rpx solid #EEEEEE;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.info-text {
  font-size: 28rpx;
  color: #333333;
}

/* 活动标签 */
.tags-section {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #EEEEEE;
}

.tag {
  font-size: 24rpx;
  color: #3B82F6;
  background-color: #EFF6FF;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

/* 内容区块 */
.section {
  padding: 30rpx;
  border-bottom: 1rpx solid #EEEEEE;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333333;
}

.section-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

.description {
  white-space: pre-line;
}

/* 组织者信息 */
.organizer-info {
  display: flex;
  flex-direction: column;
}

.organizer-info text {
  margin-bottom: 10rpx;
}

.contact-phone {
  display: flex;
  align-items: center;
}

.phone-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
}

/* 已报名用户 */
.participants-list {
  display: flex;
  flex-wrap: wrap;
}

.participant {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
}

.participant-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.participant-name {
  font-size: 24rpx;
  color: #666666;
  max-width: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.participant.more {
  justify-content: center;
  color: #999999;
}

/* 评论区 */
.comments-list {
  margin-bottom: 30rpx;
}

.comment {
  display: flex;
  margin-bottom: 30rpx;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.comment-user {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.comment-time {
  font-size: 24rpx;
  color: #999999;
}

.comment-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.comment-actions {
  display: flex;
  justify-content: flex-end;
}

.like-button {
  display: flex;
  align-items: center;
}

.like-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.like-count {
  font-size: 24rpx;
  color: #999999;
}

/* 评论输入框 */
.comment-input-section {
  display: flex;
  align-items: center;
  border: 1rpx solid #DDDDDD;
  border-radius: 36rpx;
  padding: 10rpx 20rpx;
}

.comment-input {
  flex: 1;
  height: 72rpx;
  font-size: 28rpx;
}

.comment-submit {
  background-color: #3B82F6;
  color: white;
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  margin: 0;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: white;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.share-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 6rpx;
}

.share-button text {
  font-size: 24rpx;
  color: #666666;
}

.enroll-button, .cancel-button, .checkin-button {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  margin: 0;
}

.enroll-button {
  background-color: #3B82F6;
  color: white;
}

.cancel-button {
  background-color: #F5F5F5;
  color: #666666;
}

.checkin-button {
  background-color: #10B981;
  color: white;
  margin-left: 20rpx;
}

/* 分享菜单 */
.share-menu {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
  visibility: hidden;
  transition: visibility 0.3s;
}

.share-menu.show {
  visibility: visible;
}

.share-menu-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  opacity: 0;
  transition: opacity 0.3s;
}

.share-menu.show .share-menu-mask {
  opacity: 1;
}

.share-menu-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.share-menu.show .share-menu-content {
  transform: translateY(0);
}

.share-menu-title {
  padding: 30rpx 0;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #eee;
}

.share-options {
  display: flex;
  padding: 40rpx 0;
}

.share-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: transparent;
  line-height: normal;
}

.share-option::after {
  border: none;
}

.share-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.share-cancel {
  margin: 0;
  padding: 30rpx 0;
  border-radius: 0;
  border-top: 10rpx solid #f5f5f5;
  font-size: 32rpx;
  color: #333;
  background-color: #fff;
}

.share-cancel::after {
  border: none;
}

/* 活动提醒按钮 */
.reminder-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  height: 80rpx;
  background-color: #fff;
  color: #333;
  border: 1rpx solid #ddd;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
}

.reminder-button .icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

/* 活动评价按钮 */
.rating-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  height: 80rpx;
  background-color: #fff;
  color: #333;
  border: 1rpx solid #ddd;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
}

/* 活动评价弹窗 */
.rating-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 200;
  visibility: hidden;
  transition: visibility 0.3s;
}

.rating-modal.show {
  visibility: visible;
}

.rating-modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  opacity: 0;
  transition: opacity 0.3s;
}

.rating-modal.show .rating-modal-mask {
  opacity: 1;
}

.rating-modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0.8);
  width: 80%;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  opacity: 0;
  transition: all 0.3s;
}

.rating-modal.show .rating-modal-content {
  opacity: 1;
  transform: translate(-50%, -50%) scale(1);
}

.rating-modal-title {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.rating-stars {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.star {
  font-size: 60rpx;
  color: #ddd;
  margin: 0 10rpx;
}

.star.active {
  color: #ffb400;
}

.rating-textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.rating-buttons {
  display: flex;
  justify-content: space-between;
}

.rating-cancel, .rating-submit {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.rating-cancel {
  background-color: #f5f5f5;
  color: #666;
}

.rating-submit {
  background-color: #07c160;
  color: #fff;
}