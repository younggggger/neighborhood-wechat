.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 活动信息 */
.activity-info {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.activity-image {
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.activity-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  color: #333;
}

.activity-meta {
  display: flex;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.activity-time {
  margin-right: 20rpx;
}

/* 加载中 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: #999;
}

/* 评价表单 */
.feedback-form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
  color: #333;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

/* 评分 */
.rating-section {
  margin-bottom: 30rpx;
}

.stars-container {
  display: flex;
  justify-content: center;
  margin-bottom: 10rpx;
}

.star {
  font-size: 60rpx;
  color: #ddd;
  margin: 0 10rpx;
}

.star.active {
  color: #ffcc00;
}

.rating-text {
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 评价内容 */
.comment-section {
  margin-bottom: 30rpx;
}

.comment-input {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

/* 活动体验 */
.experience-section {
  margin-bottom: 40rpx;
}

.experience-options {
  display: flex;
  flex-wrap: wrap;
}

.experience-item {
  width: 50%;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

/* 按钮 */
.button-group {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.btn-cancel, .btn-submit {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn-submit {
  background-color: #11cd6e;
  color: #fff;
}