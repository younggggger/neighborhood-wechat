/* pages/community/activity/publish/publish.wxss */

.container {
  padding: 0 0 30rpx 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 表单头部 */
.form-header {
  background-color: #fff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.form-subtitle {
  font-size: 26rpx;
  color: #999;
}

/* 表单主体 */
.form-body {
  background-color: #fff;
  padding: 0 30rpx;
}

.form-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.required {
  color: #ff4d4f;
  margin-left: 4rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
}

.form-textarea {
  width: 100%;
  height: 240rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
}

.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.form-tips {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 图片上传 */
.image-uploader {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.upload-item {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.upload-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-icon {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.upload-button {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  border: 1rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f9f9f9;
}

.upload-icon {
  font-size: 60rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

/* 时间选择器 */
.time-selector {
  display: flex;
  align-items: center;
}

.picker-item {
  flex: 1;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  background-color: #f9f9f9;
}

.picker-item.placeholder {
  color: #999;
}

.time-separator {
  margin: 0 20rpx;
  color: #999;
}

/* 位置选择 */
.location-input {
  display: flex;
  align-items: center;
}

.location-input .form-input {
  flex: 1;
  margin-right: 20rpx;
}

.location-picker {
  width: 160rpx;
  height: 80rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

/* 分类选择器 */
.picker-view {
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  background-color: #f9f9f9;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 标签选择 */
.tags-container {
  min-height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 20rpx;
  background-color: #f9f9f9;
}

.tags-placeholder {
  font-size: 28rpx;
  color: #999;
}

.selected-tags {
  display: flex;
  flex-wrap: wrap;
  flex: 1;
}

.selected-tag {
  background-color: rgba(7, 193, 96, 0.1);
  color: #07c160;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  margin-right: 16rpx;
  margin-bottom: 10rpx;
}

.tags-arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 表单底部 */
.form-footer {
  padding: 40rpx 30rpx;
}

.submit-button {
  width: 100%;
  height: 90rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.submit-button[disabled] {
  background-color: #9be6b4;
}

/* 标签选择器弹窗 */
.tag-selector-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.tag-selector {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  z-index: 101;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
}

.tag-selector-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.tag-selector-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.tag-selector-close {
  font-size: 40rpx;
  color: #999;
}

.tag-selector-body {
  padding: 20rpx 30rpx;
  max-height: 600rpx;
  overflow-y: auto;
  display: flex;
  flex-wrap: wrap;
}

.tag-item {
  background-color: #f5f5f5;
  color: #666;
  font-size: 26rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.tag-item.selected {
  background-color: rgba(7, 193, 96, 0.1);
  color: #07c160;
}

.tag-selector-footer {
  padding: 20rpx 30rpx 50rpx;
  border-top: 1rpx solid #eee;
}

.tag-confirm-button {
  width: 100%;
  height: 90rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}