/* pages/groupbuy/detail/detail.wxss */
.container {
  padding-bottom: 120rpx; /* 为底部按钮留出空间 */
  background-color: #f5f5f5;
}

/* 顶部轮播图 */
.banner-swiper {
  width: 100%;
  height: 500rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}  

/* 团购基本信息卡片 */
.info-card {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.title-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.activity-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.collect-btn {
  padding: 10rpx;
}

.collect-icon {
  width: 40rpx;
  height: 40rpx;
}

.price-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.activity-price {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-right: 15rpx;
}

.activity-original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
  margin-right: 15rpx;
}

.discount-tag {
  font-size: 22rpx;
  color: #ff4d4f;
  background-color: rgba(255, 77, 79, 0.1);
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
}

.progress-container {
  margin-bottom: 20rpx;
}

.progress-text {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.deadline {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.action-btns {
  display: flex;
  justify-content: space-between;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: none;
  border: none;
  font-size: 24rpx;
  color: #666;
  padding: 0;
  margin: 0 10rpx;
  line-height: 1.5;
}

.action-btn::after {
  border: none;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}

/* 团购详情卡片 */
.detail-card, .comments-card, .related-card {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}

.card-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background-color: #11cd6e;
  border-radius: 4rpx;
}

.detail-item {
  margin-bottom: 20rpx;
}

.detail-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.description, .rules {
  white-space: pre-line;
}

/* 用户评价 */
.comments-list {
  margin-bottom: 20rpx;
}

.comment-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.comment-item:last-child {
  border-bottom: none;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.user-name {
  font-size: 28rpx;
  color: #333;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.rating {
  display: flex;
  margin-bottom: 10rpx;
}

.star-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 5rpx;
}

.comment-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

.view-more {
  text-align: center;
  font-size: 26rpx;
  color: #11cd6e;
  padding: 10rpx 0;
}

/* 相关团购推荐 */
.related-scroll {
  white-space: nowrap;
}

.related-list {
  display: inline-flex;
  padding: 10rpx 0;
}

.related-item {
  width: 200rpx;
  margin-right: 20rpx;
  display: inline-block;
}

.related-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.related-title {
  font-size: 26rpx;
  color: #333;
  white-space: normal;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
  height: 72rpx;
}

.related-price {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: bold;
}

/* 底部固定按钮 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.join-btn {
  width: 100%;
  height: 80rpx;
  background-color: #11cd6e;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 分享弹窗 */
.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.share-modal.show {
  visibility: visible;
  opacity: 1;
}

.share-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.share-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.share-modal.show .share-content {
  transform: translateY(0);
}

.share-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.share-options {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.share-option {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.share-option-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.share-option text {
  font-size: 24rpx;
  color: #333;
}

.cancel-btn {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  color: #333;
  font-size: 30rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}